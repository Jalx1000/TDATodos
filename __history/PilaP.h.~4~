typedef int tipo_elemento;

struct NodoP
{
    tipo_elemento elemento;
    NodoP* sig;
};

typedef nodoP* dirección;

class PilaP
{
  private:
    Direccion* tope;
  public:
    PilaP();
    bool vacia();
    void meter(int e);
    void sacar(int &e);
    int cima();
    void mostrar();
};
#endif

